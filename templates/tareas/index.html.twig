{% extends 'base.html.twig' %}

{% block title %}Tareas index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.datatables.net/v/zf/dt-2.0.3/sl-2.0.0/datatables.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <h1>Tareas</h1>

    <table class="table" id="tareasTabla">
        <thead>
            <tr>
                <th><input type="checkbox" id="seleccionarTodo"></th>
                <th>Id</th>
                <th>Nombre</th>
                <th>Finalizada</th>
                <th>Creado_en</th>
                <th>Prioridad</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tarea in tareas %}
            <tr>
                <td></td>
                <td>{{ tarea.id }}</td>
                <td>{{ tarea.nombre }}</td>
                <td>{{ tarea.finalizada ? 'Yes' : 'No' }}</td>
                <td>{{ tarea.creadoEn ? tarea.creadoEn|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tarea.prioridad }}</td>
                <td>
                    <a href="{{ path('app_tareas_show', {'id': tarea.id}) }}" class="btn btn-info ">Detalles</a>
                    <a href="{{ path('app_tareas_edit', {'id': tarea.id}) }}" class="btn btn-warning ">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  <a href="{{ path('app_tareas_new') }}" class="btn btn-primary ">Crear Nuevo</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/v/zf/dt-2.0.3/sl-2.0.0/datatables.min.js"></script>
    <script>
        $(document).ready(function() {
           var table = $('#tareasTabla').DataTable({  
                select: {
                style: 'multi'
            },
            columnDefs: [{
                orderable: false,
                className: 'select-checkbox',
                targets: 0,
                checkboxes: {
                    selectRow: true
                }
            }],
            select: {
                style: 'multi',
                selector: 'td:first-child'
            },
            order: [[1, 'asc']] // Ordena la tabla por la segunda columna
        });

        $('#seleccionarTodo').on('click', function() {
            var isChecked = $(this).prop('checked');
            table.rows().select(isChecked); // Seleccionar/deseleccionar todas las filas
        });

        $('#tareasTabla tbody').on('click', 'tr', function() {
        $(this).toggleClass('selected');
        var selectedRows = table.rows('.selected').data().toArray();
        var selectedIds = selectedRows.map(function(row) {
            return row[0]; // Asume que el primer elemento es el ID del usuario
        });
        console.log(selectedIds); // Muestra los IDs de las filas seleccionadas en la consola
        });

        // Manejador de evento para actualizar la casilla "Seleccionar Todo" cuando se seleccionan/deseleccionan filas individualmente
        $('#tareasTabla').on('select deselect', function() {
            var allRowsSelected = table.rows().count() === table.rows('.selected').count();
            $('#seleccionarTodo').prop('checked', allRowsSelected);
        });
        
        });
    </script>
{% endblock %}