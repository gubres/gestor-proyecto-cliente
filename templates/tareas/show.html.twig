{% extends 'base.html.twig' %}

{% block title %}Tareas{% endblock %}

{% block body %}
    <h1>Detalles Tareas</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tarea.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ tarea.nombre }}</td>
            </tr>
            <tr>
                <th>Finalizada</th>
                <td>{{ tarea.finalizada ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Creado_en</th>
                <td>{{ tarea.creadoEn ? tarea.creadoEn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Prioridad</th>
                <td>{{ tarea.prioridad }}</td>
            </tr>
        </tbody>
    </table>

     <a href="{{ path('app_tareas_index') }}" class="btn btn-secondary">Back</a>

    <a href="{{ path('app_tareas_edit', {'id': tarea.id}) }}" class="btn btn-warning ">Editar</a>

    {{ include('tareas/_delete_form.html.twig') }}
{% endblock %}
