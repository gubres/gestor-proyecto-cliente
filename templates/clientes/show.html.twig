{% extends 'base.html.twig' %}

{% block title %}Detalles del Cliente{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Detalles del Cliente</h1>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th scope="row">Id</th>
                        <td>{{ cliente.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Nombre</th>
                        <td>{{ cliente.nombre }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Tel√©fono</th>
                        <td>{{ cliente.telefono }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Email</th>
                        <td>{{ cliente.email }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Proyectos Asociados</th>
                        <td>
                            <ul class="list-unstyled">
                                {% for proyecto in cliente.proyectos %}
                                    <li>{{ proyecto.nombre }}</li>
                                {% endfor %}
                            </ul>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-between">
        <div>
            <a href="javascript:history.go(-1);" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <a href="{{ path('app_clientes_edit', {'id': cliente.id}) }}" class="btn btn-warning">Editar</a>
        </div>
        <div>
            {{ include('clientes/_delete_form.html.twig', {'button_label': 'Eliminar', 'button_class': 'btn btn-danger'}) }}
        </div>
    </div>
</div>
{% endblock %}
